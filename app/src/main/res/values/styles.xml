<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--タイトルバー非表示-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!--テキスト選択時デザイン・edittextデザイン-->
        <item name="colorControlActivated">#a3a3a2</item>
        <item name="android:textColorHighlight">#a3a3a2</item>
        <item name="colorControlNormal">#726250</item>
        <item name="android:textColorHint">#726250</item>
    </style>
    <style name="DialogAnimation_right_left">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>
    <style name="DialogAnimation_up_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>
    <style name="DialogAnimation_bottom_up">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
</resources>
