<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:id="@+id/cardvisit_change_bt"
            android:layout_width="100dp" android:layout_height="80dp"
            android:layout_weight="1" android:contentDescription="名刺リスト"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="36dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.982" app:layout_constraintStart_toStartOf="@+id/imageView"
            app:srcCompat="@drawable/ic_launcher_foreground"/>
    <ImageButton
            android:id="@+id/cardvisit_list_view_bt"
            android:layout_width="100dp" android:layout_height="80dp"
            android:layout_weight="1" android:contentDescription="名刺確認"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/cardvisit_change_bt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.982"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.487" app:srcCompat="@drawable/ic_launcher_foreground"
            tools:srcCompat="@drawable/ic_launcher_foreground"/>
    <ImageView
            android:id="@+id/imageView" android:layout_height="237dp" android:layout_weight="1"
            android:layout_width="363dp" android:scaleType="fitXY" android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.862"
            app:srcCompat="@mipmap/ic_launcher"/>
    <Button
            android:id="@+id/help_bt"
            android:text="?"
            android:layout_width="40dp" android:layout_height="40dp"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:id="@+id/update_bt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" app:srcCompat="@android:drawable/ic_menu_edit"/>
</android.support.constraint.ConstraintLayout>